local module = {}

module.Cards = {

	Card1 = {
	Rarity = "Common",
	CardName = "Card 1"	
	},
	
	Card2 = {
		Rarity = "Uncommon",
		CardName = "Card 2"	
	},
	
	Card3 = {
		Rarity = "Rare",
		CardName = "Card 3"	
	},
	Card4 = {
		Rarity = "Epic",
		CardName = "Card 4"	
	},
	
	Card5 = {
		Rarity = "Legendary",
		CardName = "Card 5"	
	},
	
	Card6 = {
		Rarity = "Mythic",
		CardName = "Card 6"	
	},
	
	Card7 = {
		Rarity = "UltraRare",
		CardName = "Card 7"	
	},




}




module.ChooseCard = function() 
	local Card = nil
	local Rarity = nil
	local RngNumber = math.random(1,100)
	
	if RngNumber >= 20 and RngNumber <= 50 then  --Uncommon
		Rarity = "Uncommon"
	elseif RngNumber >= 50 and RngNumber <= 70 then --Rare
		Rarity = "Rare"
	elseif RngNumber >= 70 and RngNumber <= 90 then --epic
		Rarity = "Epic"	
	elseif RngNumber >= 1 and RngNumber <= 20 then --Common
		Rarity = "Common"
	elseif RngNumber >= 90 and RngNumber <= 99 then --Legendary
		Rarity = "Legendary"	
	elseif RngNumber == 100 then --Mythic 
		Rarity = "Mythic"	
	elseif RngNumber == 99 then --UltraRare
		Rarity = "UltraRare"
	end
	
	local RarityCardsTable = {}
	for i,v in pairs(module.Cards) do
		if v.Rarity == Rarity then
			table.insert(RarityCardsTable, v)
		end
	end
	
	
	while Card == nil do	
		for i,v in pairs(RarityCardsTable) do
			local Number = math.random(1,3)
			print(Number)
			if Number == 3 then
				Card = v
				break
			end
			
		end
		task.wait(0.0000000001)
	end
	
	
	return Card
	
end


return module
